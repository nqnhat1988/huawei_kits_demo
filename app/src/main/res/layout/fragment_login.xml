<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.login.LoginFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_login_with_token"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableStart="@drawable/hw_logo_btn1"
                android:text="@string/login_with_token_id" />
            <Button
                android:id="@+id/btn_login_with_auth_code"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableStart="@drawable/hw_logo_btn1"
                android:text="@string/login_with_authen_code" />
            <Button
                android:id="@+id/btn_login_with_silent"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableStart="@drawable/hw_logo_btn1"
                android:text="@string/login_with_silent" />
        </LinearLayout>

    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>